

h2 {
    font-size: x-small;
}

h4 {
    font-size: 6px;
}

#searchBlock {
    display: block;
    width: max-content;
    margin-top: 50px;
    background-color: grey;
    opacity: 0.5;
    font-size: 5px;
}

#valider {

    color: white;
    background-color: green;
    border: none;
}

/* style corps de page  */
#main1 {
    height: 125px;
}

/* slider image voiture  */
.mySlides {
    padding: 5px;
    width: 100px;
}

.col-sm-1 {
    vertical-align: middle;
}

.fleche {
    border: none;
    background: none;
}

/* colonne droite detail du vehicule  */
#caracteritiqueLocation {
    float: right;
}

#modeleLocation {
    font-size: 15px;
    font-weight: bold;
}

#detailModele,
#prixLocation,
#agenceLocation,
#location {
    font-size: 6px;
    text-align: left;
}

#location {
    background-color: green;
    border-radius: 1px;
    border: none;
}

/* Style pied de page  */
#pied {
    text-align: center;
}

/* photo de l'agence */
.agence {
    /* border: 1px solid #ddd;
    border-radius: 4px; */
    padding: 5px;
    width: 100px;
}

/* adress agence  */
#adresseAgence {
    text-align: left;
    font-size: 6px;
}

/* Paris en gras */
span {
    font-weight: bold;
}

a {
    color: black;
}

a:hover {
    color: green;
}

